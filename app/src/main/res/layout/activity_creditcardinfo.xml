<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCardNumber"
        android:layout_width="275dp"
        android:layout_height="57dp"
        android:layout_marginTop="140dp"

        android:text="Numer karty"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_width="275dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="Nazwisko"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCardNumber" />

    <TextView
        android:id="@+id/textViewFirstName"
        android:layout_width="275dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="Imię"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLastName" />

    <TextView
        android:id="@+id/textViewCCV"
        android:layout_width="275dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="Numer CCV"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValidThru" />

    <TextView
        android:id="@+id/textViewValidThru"
        android:layout_width="275dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="Karta ważna do"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirstName" />


</androidx.constraintlayout.widget.ConstraintLayout>